package chapter10;

import java.util.Calendar;
import java.util.Scanner;

/*
 	생일까지 남은 일 계산 프로그램
 	: 사용자로부터 생년월일을 입력받고
 	  다가오는 생일까지 남은 일 수 를 반환
 */

public class Practice {

	public static void main(String[] args) {
		System.out.println("연도: YYYY, 월: 1-12, 일: 1-31");
		Scanner sc= new Scanner(System.in);
		
		int birthYear= sc.nextInt();
		int birthMonth= sc.nextInt();
		int birthDay= sc.nextInt();
		
		// 2. 현재 날짜와 시간을 포함하는 Calendar 인스턴스 생성
		Calendar today= Calendar.getInstance();
		
		Calendar birthday= Calendar.getInstance();
		birthday.set(Calendar.YEAR, birthday);
		birthday.set(Calendar.MONTH, birthday);
		birthday.set(Calendar.DAY_OF_MONTH, birthday);
		
	}

}
